<?xml version="1.0" encoding="utf-8"?>
<!--    Tata Nexon-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:text="Tata Nexon"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/heading"
            android:src="@drawable/tata_nexon" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@id/photo"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/cabin"
        android:text="Manual  •  Petrol  •  5 seats"
        android:textColor="#979a9a"
        android:textSize="15sp" />
    
    <ImageView
        android:id="@+id/rating_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_24"
        android:layout_below="@id/divider2"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/rating_km_driven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0  •  42,523 kms driven"
        android:fontFamily="@font/cabin"
        android:layout_toRightOf="@id/rating_star"
        android:layout_below="@id/divider2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="5dp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:layout_below="@id/rating_km_driven"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cabin"
        android:text="₹22,000/month"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>



